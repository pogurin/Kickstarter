
<h1>All Projects</h1>

<%= form_tag projects_path, method: :get, id: 'search-form' do %>
	<%= select_tag(:search, options_for_select([['All', 0], ['Art', 1], ['Food', 2], ['Games', 3], ['Film/Video', 4], ['Music', 5], ['Photography', 6], ['Dance', 7]])) %>
	<%= submit_tag "Filter!" %>
<% end %>

<%= render 'projects' %>

<%= link_to "make a new project", new_project_path %>

